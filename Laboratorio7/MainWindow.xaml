<Window x:Class="Laboratorio7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel>
            <GroupBox Header="Productos">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <Button Content="Listar Producto" Grid.Row="0" Click="Button_Click" />
                        <Button Content="Registrar" Grid.Row="0" Click="registrar" />
                        <Button Content="eliminar" Grid.Row="0" Click="eliminar" />
                    </StackPanel>

                    <DataGrid x:Name="dgProducts" Grid.Row="1" />
                </Grid>
            </GroupBox>
        </StackPanel>
        


    </Grid>
</Window>
